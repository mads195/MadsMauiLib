<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mads195.MadsMauiLib.Controls.SectionTitle">
    <Grid Padding="0" RowSpacing="1" BackgroundColor="{Binding BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Padding="{Binding Padding}" BackgroundColor="Transparent" x:Name="TitleLabelPadding">
            <Label x:Name="TitleLabel" 
               Text="{Binding Text}"
               HorizontalOptions="{Binding HorizontalOptions}" 
               HorizontalTextAlignment="{Binding HorizontalTextAlignment}"
               VerticalOptions="{Binding VerticalOptions}"
               VerticalTextAlignment="{Binding VerticalTextAlignment}"
               TextColor="{Binding TextColor}"
               FontAttributes="{Binding FontAttributes}"/>
        </Grid>
    </Grid>
</ContentView>
