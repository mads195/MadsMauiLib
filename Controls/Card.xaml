<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Mads195.MadsMauiLib.Controls.Card"
             x:Name="self">
    
    <ContentView.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <toolkit:VariableMultiValueConverter 
                x:Key="VariableMultiValueConverter"
                ConditionType="Exact"
                Count="2" />
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Border HorizontalOptions="Fill" StrokeThickness="{Binding Source={x:Reference self}, Path=StrokeThickness}" Stroke="{Binding Source={x:Reference self}, Path=StrokeColor}" BackgroundColor="{Binding Source={x:Reference self}, Path=BackgroundColor}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15" />
        </Border.StrokeShape>

        <Grid>
            <Button Command="{Binding Source={x:Reference self}, Path=Command}" CommandParameter="{Binding Source={x:Reference self}, Path=CommandParameter}" BackgroundColor="Transparent" />
            <VerticalStackLayout>
                <FlexLayout JustifyContent="SpaceBetween" Padding="20,10" IsVisible="{Binding ShowTitle}">
                    <Label Text="{Binding Source={x:Reference self}, Path=Title}" FontAttributes="{Binding Source={x:Reference self}, Path=TitleFontAttributes}" />
                    <Image Source="{Binding Source={x:Reference self}, Path=IconSource}" IsVisible="{Binding Source={x:Reference self}, Path=ShowEditIcon}" Margin="20,0,0,0" />
                </FlexLayout>
                <Grid HeightRequest="1" BackgroundColor="LightGray" Margin="0,0,0,20" IsVisible="{Binding Source={x:Reference self}, Path=ShowSeparator}" />
                <Grid Padding="20,0,20,20">
                    <FlexLayout JustifyContent="SpaceBetween" Padding="20,10">
                        <Entry Text="{Binding Source={x:Reference self}, Path=CardContent}" IsEnabled="False" Placeholder="{Binding Source={x:Reference self}, Path=Title}" />
                        <Image Source="{Binding Source={x:Reference self}, Path=IconSource}" IsVisible="{Binding Source={x:Reference self}, Path=ShowEditIcon}" Margin="20,0,0,0" />
                    </FlexLayout>
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </Border>
</ContentView>
