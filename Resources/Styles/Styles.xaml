<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mads195.MadsMauiLib.Resources.Styles.Styles">

    <!-- Cancel Button Style -->
    <Style x:Key="Mads195_MadsMauiLib_CancelButtonStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="DarkSlateGray" />
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Stroke" Value="DarkSlateGray"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 25"/>
    </Style>

    <!-- Submit Button Style (inherits from CancelButtonStyle) -->
    <Style x:Key="Mads195_MadsMauiLib_SubmitButtonStyle" TargetType="Border" BasedOn="{StaticResource CancelButtonStyle}">
        <Setter Property="BackgroundColor" Value="ForestGreen"/>
        <Setter Property="Stroke" Value="ForestGreen"/>
    </Style>
</ResourceDictionary>